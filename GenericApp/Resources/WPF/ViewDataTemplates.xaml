<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                	xmlns:vm="clr-namespace:MpdBaileyTechnology.GenericApp.ViewModel"
                    xmlns:view="clr-namespace:MpdBaileyTechnology.GenericApp.View"
                    >

    <!--
		Data Templates to map view models to their views
	-->
    <DataTemplate DataType="{x:Type vm:HelpVM}">
        <view:HelpView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:ChartVM}">
        <view:ChartView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:ControlVM}">
        <view:ControlView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:ListVM}">
        <view:ListView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:LogVM}">
        <view:LogView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:SettingsVM}">
        <view:SettingsView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:ConnectionVM}">
        <view:ConnectionView/>
    </DataTemplate>
</ResourceDictionary>